# Environment Variables for Trading Bot
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# === Solana Wallet Configuration ===
# Your wallet's private key (base58 encoded)
SOLANA_PRIVATE_KEY=your_private_key_here

# Your wallet's public key (for verification)
SOLANA_PUBLIC_KEY=your_public_key_here

# RPC endpoint (use your own for better performance)
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# === Drift Protocol Configuration ===
DRIFT_PROGRAM_ID=dRiftyHA39MWEi3m9aunc5MzRF1JYuBsbn6VPcn33UH
DRIFT_ENV=mainnet-beta

# === Jupiter API Configuration ===
JUPITER_API_URL=https://quote-api.jup.ag/v6

# === Trading Configuration ===
# Maximum trade size in USD
MAX_TRADE_SIZE=1000

# Minimum confidence threshold for trades (0-1)
MIN_CONFIDENCE=0.75

# Risk management settings
STOP_LOSS_PCT=0.02
TAKE_PROFIT_PCT=0.04

# === Optional: API Keys for Enhanced Data ===
# CoinGecko API (for price validation)
COINGECKO_API_KEY=optional_your_api_key

# Birdeye API (for Solana-specific data)
BIRDEYE_API_KEY=optional_your_api_key